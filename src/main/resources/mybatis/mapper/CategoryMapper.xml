<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wugang.mapper.CategoryMapper">
    <!-- 查询category列表 -->
    <select id="queryList" parameterType="Category" resultType="Category">
        select *
        from category
        where 1=1
        <if test="id != null and id != ''">
            and id = #{id}
        </if>
        <if test="parent != null and parent != ''">
            and parent = #{parent}
        </if>
        <if test="name != null and name != ''">
            <bind name="pName" value="'%' + name + '%'"/>
            and `name` like #{pName}
        </if>
        <if test="sort != null and sort != ''">
            and sort = #{sort}
        </if>
    </select>

    <!-- 更新category -->
    <update id="updateCategory" parameterType="Category">
        update category
        <set>
            <if test="parent != null and parent != ''">
                parent = #{parent},
            </if>
            <if test="name != null and name != ''">
                `name` = #{name},
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 新增Category -->
    <insert id="insertCategory" parameterType="Category">
        insert into category (id, parent, `name`, sort)
        values (#{id}, #{parent}, #{name}, #{sort})
    </insert>

    <!-- 根据ID删除Category -->
    <delete id="deleteCategoryById" parameterType="String">
        delete from category where id = #{id}
    </delete>

</mapper>