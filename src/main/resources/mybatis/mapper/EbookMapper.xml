<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wugang.mapper.EbookMapper">
    <!-- 查询电子书列表 -->
    <select id="queryList" parameterType="Ebook" resultType="Ebook">
        select *
        from ebook
        where 1=1
        <if test="id != null and id != ''">
            <bind name="pId" value="'%' + id + '%'"/>
            and id like #{pid}
        </if>
        <if test="name != null and name != ''">
            <bind name="pName" value="'%' + name + '%'"/>
            and name like #{pName}
        </if>
        <if test="category1Id != null and category1Id != ''">
            and category1_id = #{category1Id}
        </if>
        <if test="category2Id != null and category2Id != ''">
            and category2_id like #{category2Id}
        </if>
        <if test="description != null and description != ''">
            <bind name="pDescription" value="'%' + description + '%'"/>
            and description like #{pDescription}
        </if>
    </select>

    <!-- 更新电子书 -->
    <update id="updateEbook" parameterType="Ebook">
        update ebook
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="category1Id != null and category1Id != ''">
                category1_id = #{category1Id}
            </if>
            <if test="category2Id != null and category2Id != ''">
                category2_id = #{category2Id}
            </if>
            <if test="description != null and description != ''">
                description = #{description}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>